<BaseLayout sideBarActiveItemID="cooking">
  <div class="pb-12 mt-5">
    <!-- Your existing content -->
    <div class="divider my-0"></div>
    <div>
      <div class="text-3xl w-full font-bold mb-5 mt-10">Some of My Dishes</div>
      <div class="gallery" id="astro-gallery">
        <!-- Images and names will be added here dynamically -->
      </div>
    </div>
  </div>

  <style>
    /* CSS for gallery layout */
    .gallery {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }
    .image-row {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      margin-bottom: 10px;
    }
    .image-container {
      position: relative; /* Relative positioning for absolute positioning of caption */
      margin: 10px;
      text-align: center;
      width: calc(20% - 20px); /* 20% for 5 images per row, 20px for margin */
    }
    .image-container img {
      width: 100%; /* Make the images fill the container */
      height: auto; /* Maintain aspect ratio */
      max-width: 100%; /* Ensure images don't exceed container width */
    }
    .image-caption {
      position: absolute; /* Position caption relative to container */
      bottom: 0; /* Align caption to bottom */
      left: 0; /* Center caption horizontally */
      right: 0; /* Center caption horizontally */
      padding: 5px; /* Add some padding */
      background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent background */
      color: black; /* White text color */
      font-weight: bold;
    }
  </style>

  <script>
    // JavaScript for dynamically adding images and names
    document.addEventListener("DOMContentLoaded", function() {
      const images = [
        { src: '/profile_5.webp', name: 'Astro Photo 1' },
        { src: '/profile_5.webp', name: 'Astro Photo 2' },
        { src: '/profile_5.webp', name: 'Astro Photo 3' },
        { src: '/profile_5.webp', name: 'Astro Photo 4' },
        { src: '/profile_5.webp', name: 'Astro Photo 5' },
        { src: '/profile_5.webp', name: 'Astro Photo 6' },
      ];

      const gallery = document.getElementById('astro-gallery');

      let currentRow;

      images.forEach((image, index) => {
        if (index % 5 === 0) {
          currentRow = document.createElement('div');
          currentRow.classList.add('image-row');
          gallery.appendChild(currentRow);
        }

        const imageContainer = document.createElement('div');
        imageContainer.classList.add('image-container');

        const img = document.createElement('img');
        img.src = image.src;
        img.alt = image.name;

        const name = document.createElement('div');
        name.textContent = image.name;
        name.classList.add('image-caption');

        imageContainer.appendChild(img);
        imageContainer.appendChild(name);
        currentRow.appendChild(imageContainer);
      });
    });
  </script>
</BaseLayout>
